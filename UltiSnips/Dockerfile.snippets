snippet node_dockerfile "node dockerfile"
FROM node:7.10.0-alpine
MAINTAINER Halsn <xuhalsn@gmail.com>

RUN echo "Asia/Shanghai" > /etc/timezone

RUN apk update && \
    apk upgrade && \
    apk add --no-cache ${1:git}

ENV FOO="bar"

EXPOSE 8000

WORKDIR /app

ADD . ./

VOLUME /app/public/media

RUN npm i && npm build

CMD npm start
endsnippet
